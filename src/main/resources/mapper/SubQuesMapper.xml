<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.cdu.questionnaire.dao.SubQuesDao">
    <select id="queryId" parameterType="java.lang.String" resultType="java.lang.String">
        select id from `user` where userName = #{userName};
    </select>

    <update id="checkIsSub" parameterType="java.lang.String">
        update userques set isSub='1' where userId=#{userId} and quesId=#{quesId};
    </update>

    <insert id="writeConQues" parameterType="java.util.List">
        insert into fieldvalue (fieldId,chosseValue,userId)
        values

        <foreach collection="list" item="item" separator=",">
            (#{item.id,jdbcType=INTEGER},#{item.value,jdbcType=VARCHAR},#{item.userId,jdbcType=INTEGER}
            )
        </foreach>
    </insert>

</mapper>